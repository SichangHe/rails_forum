<article>
  <h2 class="text-4xl">Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="my-5">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form text_field' %>
    </div>
    <div class="my-5">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form text_field' %>
    </div>
    <div class="inline">
      <%= f.submit "Change my password", class: 'inline-block btn-to-submit' %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</article>
