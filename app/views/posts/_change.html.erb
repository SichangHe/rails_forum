<div id="<%= dom_id change %>">
  <p class="my-5">
    <%= change.created_at %>
  </p>
  <article class="prose">
    <p class="my-5">
      <strong>
        <%= change.event %>
      </strong>
      by 
      <% user = User.find(change.whodunnit) %>
      <%= render 'users/preview', user: user %>
    </p>
    <p class="my-5">
      <%= change.reify %>
    </p>
  </article>
  <hr class="mt-6">
</div>
