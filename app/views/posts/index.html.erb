<div class="w-full">
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Posts</h1>
    <%= link_to 'New post', new_post_path, class: 'block btn-to-submit' %>
  </div>
  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render 'preview', post: post %>
    <% end %>
  </div>
</div>
